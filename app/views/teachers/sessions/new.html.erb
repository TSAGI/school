<h1 class="mini_title">Log in</h1>

<%= form_for(:teachers, url: teacher_session_path) do |f| %>
  <div class="field">
    <%= f.label :email, class: "card" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "card" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Enter", class: "back_button" %>
  </div>
<% end %>



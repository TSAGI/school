<h1 class="mini_title"><%= @course.name%></h1>

<%= form_for :courses_students, url: @path, method: @method do |f| %>

<div class="actions">
    <%=f.submit @button, data: {confirm: @confirm}, class: "back_button"%>
</div>

<%= f.hidden_field :course_id, :value => @course.id %>

<div class="container">
    <div class="description">
        <p><span class="card">Description: <%= @course.description%></span></p>
        <p><span class="card">Day: Every <%= @course.day%> from <%=@course.time%>.</span></p>
        <p><span class="card">Date: <%= @course.date%>.</span></p>
        <p><span class="card">Instructor: <%=@teacher.first_name%> <%=@teacher.last_name%></span></p>
    </div>
</div>

<% end%>
<div class="buttons">
 <%if @button == "Drop Course"%>
        <%if @review%>
        <div class="child buttons-child1">  
            <%=link_to "Edit Review", edit_course_review_path(@course, @review), class: "back_button"%>
        </div>
        <div class="child buttons-child2">  
            <%=link_to "Delete Review", course_review_path(@course, @review), method: :delete, 
            data: {confirm: "Are you sure you want to delete this review?"}, class: "back_button"%>
        </div>
        <%else%>     
        <div class="child buttons-child1">   
            <%=link_to "Write Review", new_course_review_path(@course), class: "back_button"%>
        </div>
        <%end%>
    <%end%>
</div>
<%if @review%>
 <div class="container">
    <div class="description">
        <h4 class="enrolled"><span class="card">My Review</span></h4>
        <p class="card"><%=@review.message%></p>
    </div>
</div>
<%end%>
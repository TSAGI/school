<h1 class="title"><%= @course.name%></h1>

<div class = "wrapper">
    <p><%=link_to "Back to Courses", student_courses_path, class: "back_button"%></p>
    <p><%=link_to "Back to Home Page", root_path, class: "back_button"%></p>
</div>

<%= form_for :courses_students, url: @path, method: @method do |f| %>

<div class="actions">
    <%=f.submit @button, class: "back_button"%>
</div>

<%= f.hidden_field :course_id, :value => @course.id %>

<div class="container">
    <div class="description">
        <p>Description: <%= @course.description%></p>
        <p>Day: Every <%= @course.day%> from <%=@course.time%>.</p>
        <p>Date: <%= @course.date%>.</p>
        <p>Instructor: <%=@teacher.first_name%> <%=@teacher.last_name%></p>
    </div>
</div>

<% end%>
<div class="buttons">
 <%if @button == "Drop Course"%>
        <%if @review%>
        <div class="child buttons-child1">  
            <%=link_to "Edit Review", edit_course_review_path(@course, @review), class: "back_button"%>
        </div>
        <div class="child buttons-child2">  
            <%=link_to "Delete Review", course_review_path(@course, @review), method: :delete, 
            data: {confirm: "Are you sure you want to delete this review?"}, class: "back_button"%>
        </div>
        <%else%>     
        <div class="child buttons-child1">   
            <%=link_to "Write Review", new_course_review_path(@course), class: "back_button"%>
        </div>
        <%end%>
    <%end%>
</div>
<%if @review%>
 <div class="container">
    <div class="description">
        <h4 class="enrolled">My Review</h4>
        <p><%=@review.message%></p>
    </div>
</div>
<%end%>